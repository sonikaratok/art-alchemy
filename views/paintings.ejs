<%- include('partials/navbar.ejs') %>
    <div>
      <ul class="image-gallery">
        <li>
          <img src="images/image-1.jpg" alt="">
          <div class="overlay"><span>Image title</span></div>
        </li>
        <li>
          <img src="images/image-2.jpg" alt="">
          <div class="overlay"><span>Image title</span></div>
        </li>
        <li>
          <img src="images/image-3.jpg" alt="">
          <div class="overlay"><span>Image title</span></div>
        </li>
        <li>
          <img src="images/image-4.jpg" alt="">
          <div class="overlay"><span>Image title</span></div>
        </li>
        <li>
          <img src="images/image-5.jpg" alt="">
          <div class="overlay"><span>Image title</span></div>
        </li>
        <li>
          <img src="images/image-6.jpg" alt="">
          <div class="overlay"><span>Image title</span></div>
        </li>

        <% products.forEach((product)=> { %>
          <% if(product.imaghere === null) { %>
              <li><%=product.name%> <img src=<%=product.imgpath%> > </li>
          <% } else { %>
            <li> <img src="data:image/png;base64,<%=product.imaghere%>" alt="">
              <div class="overlay"><span><%= product.name %></span></div>
            </li>
            <% } %>
        <% }) %>
      </ul>
    </div>
    
    <!-- Only show 'Add Your Art' button if user is logged in -->
    <% if (typeof user !== 'undefined' && user) { %>
      <a class="addyourart" href="/imageUpload">Add Your Art</a>
    <% } else { %>
      <a class="addyourart" href="/signin">Sign in to Add Your Art</a>
    <% } %>
</body>
</html>